{% apply inline_css %}
<style>
  @import
  url('https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,400;1,100;1,700&display=swap');

  body { font-family: 'Roboto', sans-serif; }

  header { background-color: #F7F0E9; display: flex; flex-direction: row;
  align-self: center; }

  a { text-decoration: none; color: #DE4E4E;}

  strong { text-transform: capitalize; }
</style>
<body>
  <header>
    <img src="cid:logo" alt="logo" />
    <h1>
      Votre commande <strong>REF{{ orderid }}</strong> est disponible !
    </h1>
  </header>

  <h2>
    Bonjour <strong>{{ firstname }} {{ lastname }}</strong>,
  </h2>

  <p>
    Votre commande <strong>REF{{ orderid }}</strong> est disponible chez <strong>
      {{ shopname }}
    </strong>.
  </p>
  <p>
    Vous pouvez la retirer.
  </p>

  <h2>
    Horaires d'ouvertures et adresse de {{ shopname }}
  </h2>

  <p>
    <strong>{{ shopopeninghours }}</strong>
  </p>
  <p>
    <strong>{{ shopname }}</strong>
  </p>
  <p>
    <strong>{{ shopadress }}</strong>
  </p>
  <p>
    <strong>{{ shopzipcode }} {{ shopcity }}</strong>
  </p>

  <footer>
    <p>
      À bientôt,
    </p>
    <p>
      L'équipe <strong><a href="#">Clicks N Co</a></strong>
    </p>
  </footer>
</body>
{% endapply %}
