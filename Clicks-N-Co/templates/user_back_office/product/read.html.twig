{% extends 'base.html.twig' %}

{% block title %}
  {{ product.name }}
{% endblock %}

{% block body %}
  <div>
    <h1>
      {{ block('title') }}
    </h1>
  </div>

  <div class="col-8">
    <ul>
      <li>{{ product.name }}</li>
      <li>{{ product.description }}</li>
      <li>{{ product.uc }}</li>
      <li>{{ product.price }}</li>
      <li><img src="{{ asset ('images/product/' ~ product.picture) }}" /></li>
      <li>{{ product.stock }}</li>
      <li>{{ product.shop }}</li>
    </ul>
  </div>
{% endblock %}
