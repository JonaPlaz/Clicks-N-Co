{% extends 'base.html.twig' %}

{% block title %}Ajouter un produit à
	{{shop.name}}
{% endblock %}

{% block body %}

	<div>
		<a href="{{ path('user_backoffice_shop_read', {'name_slug': shop.nameslug}) }}">Retour</a>
		<h2>Ajouter un produit à
			{{shop.name}}</h2>

	</div>

	{{ form_start(form) }}
	{{ form_row(form.name) }}
	{{ form_row(form.description) }}
	{{ form_row(form.uc) }}
	{{ form_row(form.price) }}
	{{ form_row(form.picture) }}
	{{ form_row(form.stock) }}
	{{ form_row(form.tags) }}
	<button>Ajouter</button>
	{{ form_end(form) }}

{% endblock %}
