{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>

	<div class="example-wrapper">


		<label for="shop-select">votre magasin</label>


		{% for shop in shops %}
			<ul>
				<li><ahref="{# { path('user_backoffice_shop', {'name_slug': shop.name_slug} ) }} #}">{{ shop.name }}{{ loop.last != true ? ',' }}</a></li>

			</ul>


		{% endfor %}


		<section class="profil">Votre profil</section>
		<span>modifier votre profil</span>
		<div>
			<ul>
				<li>Nom :
					{{user.lastname}}</li>
				<li>Prénom :
					{{user.firstname}}</li>

				<li>email :
					{{user.email}}</li>

				{# <li>téléphone : {{user.phone_number}}</li> #}
			</ul>
			<p>Votre adresse</p>
			<ul>
				<li>
					rue:
					{{user.address}}</li>
				{# <li> Code postal: {{user.zip_code}}</li> #}
				<li>
					Ville:
					{{user.city}}</li>

			</ul>


		</div>


		<h2>Vos produits</h2>
		<table class="table table-striped">
			<thead>
				<tr>

					<th>nom</th>
					<th>Description</th>
					<th>UC</th>
					<th>Prix</th>
					<th>image</th>
					<th>stock</th>
				</tr>
			</thead>
			<tbody>

				<tr>

					<td></td>
					<td>Description</td>
					<td>UC</td>
					<td>Prix</td>
					<td>image</td>
					<td>stock</td>

					<td>
						<a href="">Modifier</a>
					</td>


				</tr>


			</tbody>
		</table>
	</div>
{% endblock %}
