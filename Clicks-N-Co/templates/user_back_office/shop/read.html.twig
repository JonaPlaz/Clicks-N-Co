{% extends 'base.html.twig' %}

{% block title %}
	{{ shop.name }}
{% endblock %}

{% block body %}

	<a href="{{ path('user_backoffice_user_read', {id: user.id}) }}"><i class="bi bi-arrow-left-square-fill"></a>
<section class="box-container">
	<div class="profil-card">
	 <a href="{{ path('user_backoffice_shop_edit', {'name_slug': shop.nameslug}) }}"><i class="bi bi-pencil-square"></i></a></li>
	<h2>{{ shop.name }}</h2>

	{% if orders|length >= 1 %}
		<a class="command-alert" href="{{ path('user_backoffice_order_read', {id: shop.id}) }}">
			{{ orders|length }}
			{{ orders|length == 1 ? 'nouvelle commande' : 'nouvelles commandes' }}

		</a>
	{%  endif %}
	<div><img style="width: 400px" src="{{ asset ('images/shop/' ~ shop.picture)}}" alt="photo du magasin"></div>

	<p>{{ shop.description }}</p>

	<h3>Adresse</h3>
	<p>{{ shop.address }}</p>
	<p>{{ shop.zipcode }}</p>
	<p>{{ shop.city }}</p>

	<h3>Contact</h3>
	<p>{{ shop.email }}</p>
	<p>{{ shop.phonenumber }}</p>

	<h3>Horaires d'ouvertures</h3>
	<p>{{ shop.openinghours }}</p>
	</div>


	<div class="shop-image">
		<img style="width: 400px" src="{{ asset('images/shop/restaurant3.jpg')}}" alt="photo du magasin">
		</div>
	
	
	
</section>
<div class="order" ><h3><a href="{{ path('user_backoffice_order_read', {id: shop.id}) }}">Vos commandes</a></h3></div>
	

	<h3>Vos produits</h3>

	
	<a href="{{ path('user_backoffice_product_add', {id: shop.id}) }}">Ajouter</a>

	<table class="table table-hover">
		<thead>
			<tr>
				<th scope="col">Nom</th>
				<th scope="col">Description</th>
				<th scope="col">Image</th>
				<th scope="col">UC</th>
				<th scope="col">Prix</th>
				<th scope="col"></th>
				<th scope="col"></th>
			</tr>
		</thead>
		<tbody>
			{% for product in products %}
				<tr>
					<td>{{ product.name }}</td>
					<td>{{ product.description }}</td>
					<td><img style="width: 100px" src="{{ asset ('images/product/' ~ product.picture)}}" alt="photo du produit"></td>
					<td>{{ product.uc }}</td>

					<td>{{ product.price }} â‚¬</td>
					<td>
						<a href="{{ path('user_backoffice_product_edit', {id: product.id}) }}">Editer</a>
					</td>
					<td>
						<a href="{{ path('user_backoffice_product_delete', {id: product.id}) }}">Supprimer</a>
					</td>

				</tr>
			{% endfor %}
		</tbody>
	</table>
{% endblock %}
